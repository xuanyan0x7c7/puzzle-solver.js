{
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": ".",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "sourceMap": true,
    "incremental": true,
    "outDir": "dist",
    "baseUrl": "src"
  }
}
